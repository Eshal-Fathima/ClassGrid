<% const currentPage = typeof page !== 'undefined' ? page : ''; %>
<!DOCTYPE html>
<html lang="en" id="htmlRoot">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'ClassGrid' %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<header class="header">
  <div class="wrap header-inner">

    <a href="/" class="brand">ClassGrid</a>

    <% if (profile) { %>
      <nav class="hash-bar">
        <a href="/" class="<%= currentPage === 'dashboard' ? 'active' : '' %>">Dashboard</a>
        <a href="/timetable" class="<%= currentPage === 'timetable' ? 'active' : '' %>">Edit Timetable</a>
        <a href="/attendance" class="<%= currentPage === 'attendance' ? 'active' : '' %>">Mark Attendance</a>
        <a href="/rules" class="<%= currentPage === 'rules' ? 'active' : '' %>">Rules</a>
        <a href="/logout">Logout</a>
      </nav>

      <div class="user">
        <%= profile.name %>
        <% if (profile.semester) { %>
          (<%= profile.semester %>)
        <% } %>
      </div>

      <button type="button" class="theme-btn" id="themeToggle">Dark</button>
    <% } %>

  </div>
</header>

<main class="main wrap">
